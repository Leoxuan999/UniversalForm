@model IEnumerable<UniversalForm.Domain.Entities.Manager.T_Manager_Role>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/assets/plugins/nestable/nestable.css" rel="stylesheet" />

<div class="row page-titles">
    <div class="col-md-5 col-8 align-self-center">
        <h3 class="text-themecolor m-b-0 m-t-0">角色管理</h3>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">主页</a></li>
            <li class="breadcrumb-item active">角色管理</li>
        </ol>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.RoleName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.RoleType)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.IsSystem)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.AddManagerId)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.AddDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ModifyManagerId)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ModifyDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Remark)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RoleName)
                                </td>
                                <td>
                                    @Html.Label(item.RoleType == 1 ? "超级管理员" : "管理员")
                                </td>
                                <td>
                                    @Html.Label(item.IsSystem == 0 ? "否" : "是")
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AddManagerId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AddDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ModifyManagerId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ModifyDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Remark)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                                    <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

